<script type="text/javascript" src="/assets/preview.js"></script>
<div class="form">
<%= form_with(model: @profile, local: true, url: profile_path) do |form| %>
  <div class="image_box">
  

    <label for="image_upload" class="preview_profile"> 
      <div class="label_text">Choose File</div>
      <div class="preview_image"><%= image_tag @profile.profile.url if @profile.profile.url %></div>
      <span class="upload_image"><%= form.file_field :profile, id: 'image_upload' %></span> 
    </label>
  </div>
  <%= form.hidden_field :profile_cache %>
  
  <%= form.submit class: 'button' %>
  
<% end %>

<%= link_to 'back', profile_path, class: 'button' %>
</div>
